<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:layout_margin="8dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/button_spotify_streamer"
            android:drawableTop="@mipmap/ic_stream_music"
            style="@style/Button"/>

        <Button
            android:layout_margin="8dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="SCORES APP"
            android:id="@+id/button_scores"
            android:drawableTop="@mipmap/ic_trophy"
            style="@style/Button"/>

        <Button
            android:layout_margin="8dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="LIBRARY APP"
            android:id="@+id/button_library"
            android:drawableTop="@mipmap/ic_book"
            style="@style/Button"/>

        <Button
            android:layout_margin="8dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="BUILD IT BIGGER"
            android:id="@+id/button_build_it_bigger"
            android:drawableTop="@mipmap/ic_apps"
            style="@style/Button"/>

        <Button
            android:layout_margin="8dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="XYZ READER"
            android:id="@+id/button_xyz_reader"
            android:drawableTop="@mipmap/icbarcode"
            style="@style/Button" />

        <Button
            android:layout_margin="8dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/button_capstone_app"
            android:drawableTop="@mipmap/icrown"
            style="@style/Button" />

    </LinearLayout>

</ScrollView>
